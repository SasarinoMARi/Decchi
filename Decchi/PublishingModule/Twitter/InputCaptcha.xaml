<MahApps.Metro.Controls:MetroWindow x:Class="Decchi.PublishingModule.Twitter.InputCaptcha"
									xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
									xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
									xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
									xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
									xmlns:MahApps.Metro.Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
									Title="트위터 인증"
									Width="180"
									Height="67"
									ShowInTaskbar="False"
									WindowStartupLocation="CenterOwner"
									Icon="/Decchi;component/icon.ico"
									ResizeMode="CanMinimize"
									BorderBrush="{DynamicResource AccentColorBrush}"
									BorderThickness="1"
									Activated="Window_Activated" ShowIconOnTitleBar="False">
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="50" />
		</Grid.ColumnDefinitions>
		<TextBox Grid.Column="0"
				 x:Name="ctlVerifyKey"
				 Margin="0 0 10 0"
				 KeyDown="ctlVerifyKey_KeyDown"
				 PreviewTextInput="ctlVerifyKey_PreviewTextInput"
				 DataObject.Pasting="ctlVerifyKey_Pasting"/>
		<Button Grid.Column="1"
				Content="인증"
				Click="Button_Click" />
	</Grid>
</MahApps.Metro.Controls:MetroWindow>
